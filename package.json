{
  "name": "iiaom-windfurf",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "node apps/api/dist/main",
    "start:dev": "turbo run start:dev",
    "start:prod": "node apps/api/dist/main",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "railway:build": "turbo run build",
    "railway:deploy": "turbo run deploy"
  },
  "engines": {
    "node": ">=16.13.0",
    "pnpm": ">=8.10.0"
  },
  "packageManager": "pnpm@8.10.0",
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.9",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.130",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "turbo": "latest",
    "typeorm": "0.3.20",
    "typescript": "^4.9.5"
  }
}